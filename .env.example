# Unified Hackathon Platform Platform Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Primary database for relational data)
DATABASE_URL=postgresql://unified_hackathon:your-postgres-password@localhost:5432/unified_hackathon_dev
POSTGRES_PASSWORD=your-postgres-password

# MongoDB Database (Document storage for resumes, analytics)
MONGODB_URI=mongodb://unified_hackathon:your-mongo-password@localhost:27017/unified_hackathon_dev?authSource=admin
MONGO_PASSWORD=your-mongo-password

# Redis (Caching, session storage, message queues)
REDIS_URL=redis://:your-redis-password@localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Secrets (Use strong, random 256-bit keys in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-256-bits-minimum
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production-256-bits-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3001/api/auth/github/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/auth/linkedin/callback

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
TEAM_SERVICE_PORT=3003
RESUME_SERVICE_PORT=3004
TRACKING_SERVICE_PORT=3005
WEBSOCKET_PORT=3000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# API Base URL
API_BASE_URL=http://localhost:3001

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# OpenAI API (for resume analysis and NLP)
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# AI Agent Configuration
AGENT_CONCURRENCY=3
AGENT_TIMEOUT=30000
AGENT_RETRY_ATTEMPTS=3

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration (for email verification, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=noreply@unified_hackathon.com
FROM_NAME=Unified Hackathon Platform Platform

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt
UPLOAD_PATH=./uploads

# Cloud Storage (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=unified_hackathon-uploads

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Elasticsearch (for centralized logging)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=unified_hackathon-logs

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings
DEBUG=unified_hackathon:*
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true

# Hot Reload
WATCH_FILES=true
RESTART_ON_CHANGE=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production Settings (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_SWAGGER=false
# VERBOSE_LOGGING=false

# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# FORCE_HTTPS=true

# =============================================================================
# CLOUD DEPLOYMENT CONFIGURATION
# =============================================================================

# Google Cloud Platform
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1
# GCP_ZONE=us-central1-a

# Kubernetes Configuration
# K8S_NAMESPACE=unified_hackathon
# K8S_CLUSTER_NAME=unified_hackathon-cluster

# Container Registry
# CONTAINER_REGISTRY=gcr.io/your-project-id
# IMAGE_TAG=latest

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
ENABLE_TEAM_FORMATION=true
ENABLE_RESUME_ANALYSIS=true
ENABLE_LOCATION_TRACKING=true
ENABLE_AI_AGENTS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_NOTIFICATIONS=true

# Experimental Features
ENABLE_ADVANCED_MATCHING=true
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_BLOCKCHAIN_INTEGRATION=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Slack Integration (for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# SLACK_CHANNEL=#unified_hackathon-notifications

# Discord Integration
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/backups

# Recovery Settings
# ENABLE_AUTO_RECOVERY=true
# RECOVERY_TIMEOUT=300000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Database Connection Pooling
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis Connection Pooling
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_TIMEOUT=30000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://unified_hackathon:test-password@localhost:5432/unified_hackathon_test
TEST_MONGODB_URI=mongodb://unified_hackathon:test-password@localhost:27017/unified_hackathon_test

# Test Settings
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE_THRESHOLD=90

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real credentials to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate secrets regularly in production
# 4. Use environment-specific configuration management in production
# 5. Consider using secret management services (AWS Secrets Manager, etc.)
# 6. Validate all environment variables on application startup
# 7. Use different secrets for different environments (dev, staging, prod)

